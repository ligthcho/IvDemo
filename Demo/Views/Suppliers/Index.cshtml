@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<Demo.Models.Supplier>
@{
	ViewData["Title"] = "Index";
}

<div class="row-fluid">

	<div class="title">
		<h4><i class="icon-reorder"></i>供应商列表</h4>
		<span class="tools">
			<a href="javascript:;" class="icon-chevron-down"></a>
			<a href="javascript:;" class="icon-remove"></a>
		</span>
	</div>
	<div class="body">
		<div class="container">
			<div class="btn-group" style="margin-bottom:5px">
				<a  asp-action="sv" class="btn  btn-primary"><span class="iconfont">&#xeb9c;</span>刷新</a>
				<a  asp-action="Create" class="btn  btn-primary"><span class="iconfont">&#xeb8f;</span>新增</a>
			</div>

			@*@{Html.RenderPartial("SupplierPartialView");}*@
			<table class="table table-striped table-bordered" id="sample_1">
			<thead>
				<tr>
					<th style="width:8px;"><input type="checkbox" class="group-checkable" data-set="#sample_1 .checkboxes" /></th>
					<th>@Html.DisplayNameFor(model => model.First().SupplierID)</th>
					<th>@Html.DisplayNameFor(model => model.First().SupplierName)</th>
					<th class="hidden-phone">@Html.DisplayNameFor(model => model.First().SupplierAbbr)</th>
					<th class="hidden-phone">@Html.DisplayNameFor(model => model.First().SupplierClassify)</th>
					<th class="hidden-phone">@Html.DisplayNameFor(model => model.First().SupplierCompetentProducts)</th>
					<th class="hidden-phone">@Html.DisplayNameFor(model => model.First().SupplierBuyer)</th>
					<th class="hidden-phone">@Html.DisplayNameFor(model => model.First().SupplierProvince)</th>
					<th class="hidden-phone">@Html.DisplayNameFor(model => model.First().SupplierCity)</th>
					<th class="hidden-phone">@Html.DisplayNameFor(model => model.First().SupplierAddress)</th>
					<th class="hidden-phone">@Html.DisplayNameFor(model => model.First().SupplierType)</th>
					<th class="hidden-phone">@Html.DisplayNameFor(model => model.First().SupplierEnable)</th>
					<th class="hidden-phone">操作</th>
				</tr>
			</thead>
			<tbody>
				@foreach(Supplier item in Model)
				{
					<tr class="odd gradeX">
						<td><input type="checkbox" class="checkboxes" value="1" /></td>
						<td>@Html.DisplayFor(modelItem => item.SupplierID)</td>
						<td>@Html.DisplayFor(modelItem => item.SupplierName)</td>
						<td class="hidden-phone">@Html.DisplayFor(modelItem => item.SupplierAbbr)</td>
						<td class="hidden-phone">@Html.DisplayFor(modelItem => item.SupplierClassify)</td>
						<td class="hidden-phone">@Html.DisplayFor(modelItem => item.SupplierCompetentProducts)</td>
						<td class="hidden-phone">@Html.DisplayFor(modelItem => item.SupplierBuyer)</td>
						<td class="hidden-phone">@Html.DisplayFor(modelItem => item.SupplierProvince)</td>
						<td class="hidden-phone">@Html.DisplayFor(modelItem => item.SupplierCity)</td>
						<td class="hidden-phone">@Html.DisplayFor(modelItem => item.SupplierAddress)</td>
						<td class="hidden-phone">@Html.DisplayFor(modelItem => item.SupplierType.TypeName)</td>
						@{if(item.SupplierEnable == "1")
							{
								<td class="hidden-phone">启用</td>
							}
							else
							{
								<td class="hidden-phone">禁用</td>
							}
						}
						<td class="hidden-phone">
							<a asp-action="Edit" asp-route-id="@item.ID"><span class="iconfont">&#xeb93;</span>修改</a>
							<form asp-action="Delete" class="btn btn-link">
								<input type="hidden" name="sid" value=@item.ID />
								<span class="iconfont">&#xeb94;</span>
								<input type="submit" onclick="return confirm('确认删除？')" value="删除" class="btn-link btn-flx">
							</form>
						</td>
					</tr>
				}
			</tbody>
		</table>
			<div id="Paging">
				每页 @Model.PageSize 条记录，共 @Model.PageCount 页，当前第 @Model.PageNumber 页
				@Html.PagedListPager(Model,page => Url.Action("Index",new { page }))
			</div>
		</div>
	</div>
</div>
@section Scripts{
<script>

</script>
}


